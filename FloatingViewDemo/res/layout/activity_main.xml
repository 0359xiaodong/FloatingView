<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gruposca.android.floatingview"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView 
        android:id="@+id/List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/demo_data" />

    <com.gruposca.android.floatingview.ui.views.FloatingView
        android:id="@+id/FloatingView" 
        android:layout_width="@dimen/floating_view_size"
        android:layout_height="@dimen/floating_view_size"
        android:background="@drawable/float_view_selector"
        app:scrollableView="@+id/List" />
    
</RelativeLayout>